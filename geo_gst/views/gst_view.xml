<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_tax_inherit__inheritform" model="ir.ui.view">
        <field name="name">account.tax.inherit.form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="tax_type" widget="selection"/>
            </xpath>
        </field>
    </record>


    <record id="view_partner_form_details" model="ir.ui.view">
        <field name="name">view.partner.form.details</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[@name='sales_purchases']" position="after">
                    <page string="GST" name="gst">
                        <group string="GST">
                            <group>
                                <field name="gstin_registered"/>
                                <field name="gstin" attrs="{
                                'invisible': [('gstin_registered','=',False)],'required': [('gstin_registered','=',True)]}"/>
                                <field name="cin_no" />
                            </group>
                            <group>
                                <field name="e_commerce"/>
                                <field name="e_commerce_tin" attrs="{'invisible': [('e_commerce','=',False)]}"/>
                                <field name="pan_no" />
                            </group>
                         </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

]


    <record id="product_gst_form_view" model="ir.ui.view">
        <field name="name">product.template.gst.form</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[@name='invoicing']//group[1]" position="before">
                    <group string="HSN Details" colspan="2">
                        <group>
                            <field name="hsn_code" attrs="{'required': [('type', '!=', 'service')]}"/>
                        </group>
                    </group>
                    <group colspan="2">
                        <group string="Sales GST" attrs="{'invisible': [('hsn_code','=',False)]}">
                            <field name="cgst_sale" options="{'no_open': True}"/>
                            <field name="sgst_sale" options="{'no_open': True}"/>
                            <field name="igst_sale" options="{'no_open': True}"/>
                        </group>
                        <group string="Purchase GST" attrs="{'invisible': [('hsn_code','=',False)]}">
                            <field name="cgst_purchase" options="{'no_open': True}"/>
                            <field name="sgst_purchase" options="{'no_open': True}"/>
                            <field name="igst_purchase" options="{'no_open': True}"/>
                        </group>
                    </group>
                </xpath>

<!--                <xpath expr="//page[@name='invoicing']//group//group//field[@name='property_account_income_id']"-->
<!--                       position="after">-->
<!--                    <field name="hsn_code_new" groups="base.group_no_one" invisible="1"/>-->
<!--                </xpath>-->
<!--                <xpath expr="//page[@name='invoicing']//group//group//field[@name='taxes_id']" position="attributes">-->
<!--                    <attribute name="invisible">1</attribute>-->
<!--                </xpath>-->
<!--                <xpath expr="//page[@name='invoicing']//group//group//field[@name='supplier_taxes_id']"-->
<!--                       position="attributes">-->
<!--                    <attribute name="invisible">1</attribute>-->
<!--                </xpath>-->
            </data>
        </field>
    </record>

    <record id="gst_invoice_supplier_form" model="ir.ui.view">
