    <!-- Inherit partner search view-->
    <record id="view_res_partner_filter_inherit_address_type" model="ir.ui.view">
        <field name="name">res.partner.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search/filter[@name='supplier']" position="after">
                <separator/>
                <filter string="Contacts" name="contact_address" domain="[('type','=','contact')]"/>
                <filter string="Invoice Address" name="invoice_address" domain="[('type','=','invoice')]"/>
                <filter string="Shipping Address" name="ship_address" domain="[('type','=','delivery')]"/>
                <filter string="Other Address" name="other_address" domain="[('type','=','other')]"/>
            </xpath>
            <xpath expr="//search/group/filter[@name='group_country']" position="after">
                <filter name="type" string="Address Type" domain="[]" context="{'group_by' : 'type'}"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit contacts(partner) action -->
    <record id="contacts.action_contacts" model="ir.actions.act_window">
        <field name="context">{'search_default_contact_address':1}</field>
    </record>

