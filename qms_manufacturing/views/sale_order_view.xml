<odoo>

     <record id="sale_order_view_inherit_mrp" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.mrp</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_invoice']" position="after">
                <field name="production_ids" invisible="1"/>
                <button type="object"
                    name="view_production_orders"
                    class="oe_stat_button"
                    icon="fa-gears"
                    attrs="{'invisible': [('production_count', '=', 0)]}"
                        groups="mrp.group_mrp_user,mrp.group_mrp_manager" invisible="1">
                    <field name="production_count" widget="statinfo" string="MO" invisible="1"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>