<odoo>
    <data>
        <record id="mrp_prduction_form_inherit" model="ir.ui.view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <data>

                    <xpath expr="//field[@name='user_id']" position="before">
                         <field name="delivery_date"/>
                        <field name="sale_id" readonly="1"/>
                    </xpath>


                    <xpath expr="//notebook/page[2]" position="after">
                        <page string="Packing Line" name="packing_lines">
                            <field name="production_pack_line">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <!--<field name="product_qty"/>-->
                                    <field name="type"/>
                                    <field name="size"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>


        <menuitem id="mrp.menu_mrp_bom_form_action"
            action="mrp.mrp_bom_form_action"
            parent="mrp.menu_mrp_bom" name="Kit Contents"
            sequence="13"/>



    </data>
</odoo>