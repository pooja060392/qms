<odoo>
    <data>
<!-- Wizard form view -->
    <record id="send_approval_wizard" model="ir.ui.view">
        <field name="name">send.approval.wiz</field>
        <field name="model">send.approval.po</field>
        <field name="arch" type="xml">
        <form string="Users">
            <sheet>
                <group>
                    <group>
                        <field name="approved_user_id" required="1" options="{'no_create': True, 'no_open': True}"
                               domain="[('is_approved_po','=',True)]"/>
                    </group>
                </group>
            </sheet>
        <footer>
            <button name="submit_button" string="Submit" type="object" class="btn-primary"/>
            <button string="Cancel" class="btn-default" special="cancel" />
        </footer>
        </form>
        </field>
        </record>

        <record id="action_packaging_po" model="ir.actions.act_window">
            <field name="name">PO send for Approval</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">send.approval.po</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>
    </data>
</odoo>