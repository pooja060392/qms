<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Wizard form view -->
    <record id="view_wizard_request_material_form" model="ir.ui.view">
        <field name="name">Request</field>
        <field name="model">request.material</field>
        <field name="arch" type="xml">
        <form string="Users">
            <sheet>
                <group>
                    <group>
                        <field name="type" required="1"/>
                    </group>
                </group>
            </sheet>
        <footer>
            <button name="submit_button" string="Submit" type="object" class="btn-primary"/>
            <button string="Cancel" class="btn-default" special="cancel" />
        </footer>
        </form>
        </field>
        </record>

        <record id="action_request_material_form_wizard" model="ir.actions.act_window">
            <field name="name">Material Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">request.material</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>
    </data>
</odoo>