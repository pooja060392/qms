<odoo>
    <data>
        <record id="view_from_rejection_so" model="ir.ui.view">
            <field name="name">so.rejection.reason</field>
            <field name="model">so.rejection.reason</field>
            <field name="arch" type="xml">
                <form string="Rejection Reason">
                    <group>
                        <field name="reason_of_rejection" required="1"/>
                    </group>
                    <footer>
                        <button name="reject" string="Reject" class="oe_highlight" type="object"/>
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_rejection_so" model="ir.actions.act_window">
            <field name="name">Rejection Reason</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">so.rejection.reason</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <!--<field name="view_id" ref="view_from_rejection_so"/>-->
        </record>
    </data>
</odoo>