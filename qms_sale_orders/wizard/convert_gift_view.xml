<odoo>
    <data>
        <record id="view_from_convert_gift" model="ir.ui.view">
            <field name="name">convert.gift</field>
            <field name="model">convert.gift</field>
            <field name="arch" type="xml">
                <form string="Reject">
                    <group colspan="2" col="2">
                        <field name="sale_id" invisible="1"/>
                        <field name="user_id" required="1" domain="[('is_gift_approval_team', '=', True)]"
                               options="{'no_create_edit': True, 'no_edit': True, 'no_create': True}"/>
                    </group>
                    <group string="Products">
                        <field name="product_line" nolabel="1">
                            <tree editable="bottom" create="false">
                                <field name="product_id" readonly="1" force_save="1"/>
                                <field name="qty" required="1"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="convert_gift" string="Confirm" class="oe_highlight" type="object"/>
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_convert_gift" model="ir.actions.act_window">
            <field name="name">Convert into Gift</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">convert.gift</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>