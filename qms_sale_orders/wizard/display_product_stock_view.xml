<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_stock_wizard_view" model="ir.ui.view">
        <field name="name">product.stock.wizard.view</field>
        <field name="model">product.stock.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Product">

               <field name="sale_id" invisible="1"/>
               <field name="product_line_ids" nolabel="1">
                    <tree editable="bottom" create="false" delete="false">
                        <field name="select_product"/>
                        <field name="sku_number" force_save="1" readonly="1"/>
                        <field name="product_id" force_save="1" readonly="1"/>
                        <field name="available_qty" force_save="1" readonly="1"/>
                        <field name="stock_code" force_save="1" readonly="1"/>
                    </tree>
               </field>

                <footer>
                    <button name="action_save" string="Select" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

        <record id="action_product_stock_wizard" model="ir.actions.act_window">
           <field name="name">Select Product</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">product.stock.wizard</field>
           <field name="view_mode">form</field>
           <field name="context">{'record_id' : active_id}</field>
           <field name="target">new</field>
        </record>
</odoo>
