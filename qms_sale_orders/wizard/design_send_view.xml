
<odoo>
    <data>
<!-- Wizard form view -->
    <record id="view_design_form" model="ir.ui.view">
        <field name="name">design.send.wiz</field>
        <field name="model">design.send.wiz</field>
        <field name="arch" type="xml">
        <form string="Users">
            <sheet>
                <group>
                    <group>
                        <field name="design_user_id" required="1" options="{'no_create': True, 'no_open': True}" domain="[('is_design_pack','=',True)]"/>
                    </group>
                </group>
            </sheet>
        <footer>
            <button name="submit_button" string="Submit" type="object" class="btn-primary"/>
            <button string="Cancel" class="btn-default" special="cancel" />
        </footer>
        </form>
        </field>
        </record>

        <record id="action_design_form_wizard" model="ir.actions.act_window">
            <field name="name">Send For Design</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">design.send.wiz</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>
    </data>
</odoo>