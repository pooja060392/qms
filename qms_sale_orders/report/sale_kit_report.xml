<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="report_saleorder_document_kit">
    <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
        <div class="page">
            <div class="oe_structure"/>
            <div class="row">
                <!--<style>-->
                    <!--table, th, td {-->
                        <!--border: 1px solid black !important;-->
                        <!--border-collapse: collapse !important;-->
                    <!--}-->
                <!--</style>-->
                <div class="left" style="padding-left:15px;">
                    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id
                             and doc.partner_invoice_id != doc.partner_id
                             or doc.partner_shipping_id != doc.partner_invoice_id">
                        <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and shipping address:</strong>
                        <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing address:</strong>
                        <div t-field="doc.partner_invoice_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <div t-if="doc.partner_shipping_id != doc.partner_invoice_id" class="mt8">
                            <strong>Shipping address:</strong>
                            <div t-field="doc.partner_shipping_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </t>
                </div>
                <div class="left">
                    <div t-field="doc.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="doc.partner_id.vat"/></p>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr style="border: 1px solid black;">
                        <th style="border: 1px solid black;">Product:</th>
                        <th style="border: 1px solid black;" class="text-right">Rate:</th>
                        <th style="border: 1px solid black;" class="text-right">Qty:</th>
                        <th style="border: 1px solid black;" class="text-right">Delivery Schedule:</th>
                        <th style="border: 1px solid black;" class="text-right">Payment Terms:</th>
                    </tr>
                </thead>
                <tbody>
                    <tr style="border: 1px solid black;">
                        <td style="border: 1px solid black;">
                            <t t-if="doc.is_existing_kit">
                                <p t-field="doc.kit_id.name"/>
                            </t>
                            <t t-if="not doc.is_existing_kit">
                                <p t-field="doc.kit_name"/>
                            </t>
                        </td>
                        <td style="border: 1px solid black;" class="text-right">
                            <p t-field="doc.kit_rate"/>
                        </td>
                        <td style="border: 1px solid black;" class="text-right">
                            <p t-field="doc.kit_quantity"/>
                        </td>
                        <td style="border: 1px solid black;" class="text-right">
                            <p t-field="doc.delivery_schedule"/>
                        </td>
                        <td style="border: 1px solid black;" class="text-right">
                            <p t-field="doc.payment_term_id"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

            <t t-foreach="doc.order_lines_layouted()" t-as="page">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th class="text-right">Qty Per Kit</th>
                            <th class="text-right">MRP Per PC</th>
                            <th class="text-right">Price Per PC</th>
                            <th class="text-right">Total</th>
                        </tr>
                   </thead>
                   <tbody class="sale_tbody">
                        <t t-foreach="page" t-as="layout_category">

                            <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                <tr class="active">
                                    <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                        <t t-esc="layout_category['name']"/>
                                    </td>
                                </tr>
                            </t>

                            <!-- Lines associated -->
                            <t t-foreach="layout_category['lines']" t-as="l">
                                <tr>
                                    <td><span t-field="l.name"/></td>
                                    <td class="text-right">
                                        <span t-field="l.qty_per_kit"/>
                                        <!--<span t-field="l.product_uom" groups="product.group_uom"/>-->
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.mrp"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </tr>
                            </t>

                            <t>
                                <tr>
                                    <td><strong>Total Amt:</strong></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td class="text-right">
                                        <t t-set="subtotal"
                                           t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                        <span t-esc="subtotal"
                                              t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                    </td>
                                </tr>
                            </t>

                        </t>
                    </tbody>
                </table>

                <!--<t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">-->
                    <!--<p style="page-break-before:always;"> </p>-->
                <!--</t>-->
            </t>
            <br/>
            <p t-field="doc.note" />
            <!--<p t-if="doc.payment_term_id.note">-->
                <!--<span t-field="doc.payment_term_id.note"/>-->
            <!--</p>-->
            <!--<p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">-->
                <!--<strong>Fiscal Position Remark:</strong>-->
                <!--<span t-field="doc.fiscal_position_id.note"/>-->
            <!--</p>-->
            <div class="oe_structure"/>
        </div>
    </t>
</template>


<template id="report_saleorder_kit">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="qms_sale_orders.report_saleorder_document_kit" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
