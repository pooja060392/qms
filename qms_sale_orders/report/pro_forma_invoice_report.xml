<odoo>

    <!-- start : header-->
        <template id="external_layout_background_invoice">
            <div class="header o_background_header">
                <div class="pull-right">
                    <h3 class="mt0 text-right" t-field="company.report_header"/>
                </div>
                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" class="pull-left"/>
                <div class="pull-left company_address" style="font-size:13px">
                    <t t-if="company.partner_id.name">
                        <strong t-field="company.partner_id.name"/><br/>
                    </t>
                    <t t-if="company.street">
                        <span t-field="company.street"/><br/>
                    </t>
                    <t t-if="company.street2">
                        <span t-field="company.street2"/><br/>
                    </t>
                    <t t-if="company.city">
                        <span t-field="company.city"/> <span t-field="company.zip"/>, <span t-field="company.state_id.name"/>, <span t-field="company.state_id.code"/>, <span t-field="company.country_id.name"/><br/>
                    </t>
                </div>
                <div class="pull-left company_address" style="font-size:13px">
                    <t>
                        <b style="font-size:14px">Godown Address:</b><br/>
                    </t>
                    <t>
                        <b style="font-size:13px">Shree Rajlaxmi Commercial Complex Building No: P, Gala No 12b/13/14/15,</b><br/>
                    </t>
                    <t>
                        Ground Floor Agra Road,Kalher Village, Bhiwandi - 421302,<br/>
                    </t>
                    <t>
                        Call us at: 9764291298 / 9821816514 / 08390051888 / 7208730407<br/>
                    </t>
                </div>
                <br/>
                <div class="pull-left" colspan="2">
                    <b>Call: </b><span t-field="company.phone"/> <b>Email: </b><span t-field="company.email"/> <b>Web: </b><span t-field="company.website"/>
                </div>
                 <div class="clearfix mb8"/>
            </div>

            <div class="article o_report_layout_background">
                <t t-raw="0" />
            </div>

        </template>

        <template id="external_layout_invoice">
            <!-- Multicompany -->
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>

            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>

            <t t-if="company.external_report_layout == 'background'">
                <t t-call="qms_sale_orders.external_layout_background_invoice"><t t-raw="0"/></t>
            </t>
            <t t-if="company.external_report_layout == 'boxed'">
                <t t-call="web.external_layout_boxed"><t t-raw="0"/></t>
            </t>
            <t t-if="company.external_report_layout == 'clean'">
                <t t-call="web.external_layout_clean"><t t-raw="0"/></t>
            </t>
            <t t-if="company.external_report_layout in (False, 'standard')">
                <t t-call="web.external_layout_standard"><t t-raw="0"/></t>
            </t>
        </template>
